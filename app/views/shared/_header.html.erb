<div class="header navbar-fixed-top" role="navigation">
  <div class="header__left col-sm-5 col-md-5">
    <div class="header__left__subtitle">
      <p class="header__left__subtitle__message">奥様の為の献立検討サイト</p>
    </div>
    <div class="header__left__title">
      <%= link_to '/' do %>
        <p class="header__left__title__message">COOK MORIMORI</p>
        <%= image_tag('cook.png', class:"header__left__image") %>
        <% end %>
    </div>
  </div>
  <div class="header__center col-sm-2 col-md-2">
  </div>
  <div class="header__right col-sm-5 col-md-5">
    <div class="header__right__btn">
      <button type="button" class="btn btn-primary dropdown-toggle" data-toggle="dropdown" aria-haspopup="true"       aria-expanded="false">
        メニュー <span class="caret"></span>
      </button>
      <ul class="dropdown-menu">
        <li><a href="#">料理リスト</a></li>
        <li><a href="#">タグリスト</a></li>
        <li><a href="#">ユーザリスト</a></li>
        <% if user_signed_in? %>
          <li role="separator" class="divider"></li>
          <li><a href="#">投稿する</a></li>
        <% end %>
      </ul>
      <% if user_signed_in? %>
          <button type="button" class="img-circle search__form__btn btn-primary btn btn-primary" data-toggle="modal" data-target="#input">詳細検索</button>
        <%= link_to '/', class:"btn btn-primary" do %>
          <%= current_user.name %>さん
          <%= image_tag current_user.icon_image.url, class:"btn__icon" %>
        <% end %>
        <%= link_to "ログアウト", destroy_user_session_path, method: :delete, class:"btn btn-primary" %>
      <% else %>
        <button type="button" class="img-circle search__form__btn btn-primary btn btn-primary" data-toggle="modal" data-target="#input">詳細検索</button>
        <%= link_to "新規登録", new_user_registration_path, method: :get, class:"btn btn-primary" %>
        <%= link_to "ログイン", new_user_session_path, method: :get, class:"btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div>
<div class="modal fade" id="input" tabindex="-1">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal"><span>×</span></button>
        <h4 class="modal-title">条件を指定して検索する</h4>
      </div>
    </div>
  </div>
</div>
